{
  "camera_initialization_options": {
    "resolution": "1280x720",
    "framerate": 22
  },

  "trigger_responses": {
    "record_to_file": {
      "format": "h264",
      "destination_path": "/detected_motion_clips",
      "record_time_before_trigger": "2",
      "record_time_after_trigger": "8",
      "recording_options": {
        "profile": "high",
        "bitrate": 2000000
      }
    }
  },

  "modes": {
    "network_serving": [
      {
        "schedules": ["always"],
        "mode_config": {
          "prepend_size": true,
          "recording_options": {
            "quality": 22,
            "profile": "high",
            "intra_period": 15,
            "inline_headers": true
          }
        }
      }
    ],
    "network_trigger": [
      {
        "schedules": ["always"],
        "mode_config": {
          "trigger_id": 0
        },
        "trigger_responses": ["record_to_file"]
      }
    ]
  }
}
